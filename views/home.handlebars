<br>
<h1 class="mx-3">All Blogs</h1>
<br>
<section class="d-flex flex-column p-2 align-items-center">
<div class="d-flex flex-wrap p-1" id="blogDiv">
{{#each allBlogs}}
  <div class="card text-bg-tertiary mb-3 w-50 rounded-0" style="min-width: 25%;">
    <div class="card-header">{{User.username}} says:</div>
    <div class="card-body">
      <h5 class="card-title">{{title}}</h5>
      <p class="card-text">{{blog_text}}</p>
    </div>
    <p class="mx-3">
    <a class="btn btn-outline-light btn-sm" data-bs-toggle="collapse" href="#{{id}}" role="button" aria-expanded="false" aria-controls="collapseExample">
      Comments
    </a>
  </p>

  <div class="collapse m-3" id="{{id}}">
 
  <form class="commentForm" id="{{id}}">
    <div class="mb-3 d-flex w-75">
      <label for="commentInput" class="form-label mx-3">Add a comment!</label>
      <input class="form-control bg-secondary text-light-emphasis w-50" id="commentInput">
      <button type="submit" class="btn btn-outline-primary btn-sm mx-3" id="commentSubmit">Submit</button>
    </div>
  </form>
  {{#each Comments}}
    <div class="card card-body rounded-0">
      {{comment_text}}
    </div>
  {{/each}}
  </div>
    <p class="card-text m-3">Bloged on {{createdAt}}</p>
  </div>
  {{/each}}
</div>
</section>

<script src="/js/home.js"></script>